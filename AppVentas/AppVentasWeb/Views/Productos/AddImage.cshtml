@model AppVentasWeb.Models.AddProductImageViewModel
@{
    ViewData["Title"] = "AddImage";
}


<div class="card">
    <div class="card-header">
        <h5 class="card-title"><i class="fa-regular fa-image"></i>  Imagen / Producto</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">

                <form asp-action="AddImage" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductoId" />

                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>

                        <input asp-for="ImageFile" class="form-control mt-" type="file" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                        <a asp-action="Details" asp-route-id="@Model.ProductoId" class="btn btn-outline-success"><i class="fa-solid fa-left-long"></i> Regresar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
 

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}