@model AppVentasWeb.Data.Entidades.Producto


<table class="table table-striped table-bordered table-responsive-md smfont" id="CategoriesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategories.FirstOrDefault().Categoria.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductCategories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                </td>
                <td>
                    <button data-id="@item.Id" class="btn btn-sm btn-outline-danger deleteItem2" data-bs-toggle="modal" data-bs-target="#deleteDialog">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>