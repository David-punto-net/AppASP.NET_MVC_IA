@model AppVentasWeb.Models.AddCategoryProductViewModel
@{
    ViewData["Title"] = "AddCategory";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title"><i class="fa-regular fa-image"></i>  Categoría / Producto</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">

                <form asp-action="AddCategory" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="ProductoId" />
                    <input type="hidden" asp-for="Categories" />

                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label mb-2"></label>
                        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Crear" class="btn btn-outline-primary" />
                        <a asp-action="Details" asp-route-id="@Model.ProductoId" class="btn btn-outline-success"><i class="fa-solid fa-left-long"></i> Regresar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
