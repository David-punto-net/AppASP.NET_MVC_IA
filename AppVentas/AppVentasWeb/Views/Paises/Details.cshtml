@model AppVentasWeb.Data.Entidades.Pais

@{
    ViewData["Title"] = "Details";
}

<div class="card mb-3">
    <div class="card-header">
        <h5 class="card-title">Detalle País</h5>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-8">

                    <partial name="_PaisDetalle" />

                    <div class="form-group row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-8">
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Id">Editar País</a>
                            <a asp-action="Index" class="btn btn-success">Volver</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div class="card">
    <div class="card-header">

        <h5 class="card-title">Regiones</h5>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="AddRegion" class="btn btn-primary" asp-route-id="@Model?.Id">Agregar Región</a>
        </p>

        <table class="table table-hover table-responsive table-striped" id="MyTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Regiones.FirstOrDefault().Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Regiones.FirstOrDefault().NumeroDeComunas)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Regiones)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroDeComunas)
                        </td>
          
                        <td>
                            <a class="btn btn-outline-warning btn-sm" asp-action="EditRegion" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-outline-info btn-sm" asp-action="DetailsRegion" asp-route-id="@item.Id">Detalle</a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="DeleteRegion" asp-route-id="@item.Id">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}

