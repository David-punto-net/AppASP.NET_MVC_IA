@model AppVentasWeb.Data.Entidades.Pais



<table class="table table-striped table-responsive-md table-bordered smfont" id="RegionesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
       
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Regiones.FirstOrDefault().Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Regiones.FirstOrDefault().NumeroDeComunas)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Regiones)
        {
            <tr>
                <td>
                    <a asp-action="DetailsRegion" asp-controller="Paises"
                       asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Nombre)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDeComunas)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("EditRegion", "Paises", new { id = item.Id },Context.Request.Scheme)' , 'Actualizar Región')" class="btn btn-sm btn-outline-info"><i class="fa-solid fa-pen-to-square"></i> </a>
                    <button data-id="@item.Id" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa-solid fa-trash"></i></button>
                </td>

            </tr>
        }
    </tbody>
</table>