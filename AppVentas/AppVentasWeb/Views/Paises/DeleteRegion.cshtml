@model AppVentasWeb.Data.Entidades.Region
@{
    ViewData["Title"] = "DeleteRegion";
}

<flash dismissable="true" />

<div class="card">

    <div class="card-header">
        <h5 class="card-title">Borrar Región</h5>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <p>¿Esta seguro de querer borrar?</p>

                @*<-- Campos del formulario en visat parcial -->*@
                <partial name="_RegionDetalle" />

                <form asp-action="DeleteRegion">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-4">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Borrar" class="btn btn-danger" />
                            <a asp-action="Details" class="btn btn-success" asp-route-id="@Model?.Pais.Id">Volver</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


