@model IEnumerable<AppVentasWeb.Data.Entidades.Pais>

@{
    ViewData["Title"] = "Paises";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div class="card">
    <div class="card-header">

        <h5 class="card-title">Paises</h5>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-success">Nuevo</a>
        </p>

        <table class="table table-hover table-responsive table-striped" id="MyTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            @* <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalle</a> *@
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

