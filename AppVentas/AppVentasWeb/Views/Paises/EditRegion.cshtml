@model AppVentasWeb.Models.RegionViewModel

@{
    ViewData["Title"] = "EditRegion";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Editar Región</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">

                <form asp-action="EditRegion">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" /> 
                    <input type="hidden" asp-for="PaisId" />
    

                    <partial name="_Region" />

                    <div class="form-group row">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-4">
                            <input type="submit" value="Guardar" class="btn btn-success" />
                            <a asp-action="Details" asp-route-id="@Model.PaisId" class="btn btn-primary">Volver</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
