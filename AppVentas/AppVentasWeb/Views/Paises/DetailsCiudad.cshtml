@model AppVentasWeb.Data.Entidades.Ciudad
@{
    ViewData["Title"] = "DetailsCiudad";
}

<div class="card mb-3">
    <div class="card-header">
        <h5 class="card-title">Detalle Ciudad</h5>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-8">

                <partial name="_CiudadDetalle" />

                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <a asp-action="Editciudad" class="btn btn-warning" asp-route-id="@Model?.Id">Editar Ciudad</a>
                        <a asp-action="DetailsComuna" class="btn btn-success" asp-route-id="@Model?.Comuna.Id">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







