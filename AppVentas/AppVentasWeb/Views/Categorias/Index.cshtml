@model IEnumerable<AppVentasWeb.Data.Entidades.Categoria>

@{
    ViewData["Title"] = "Categoría";
}




<div class="container-fluid">
    
    <div class="card mt-2">

        <div class="card-header">
            <i class="fa-solid fa-table-list"></i> <strong>Categorías</strong>
        </div>

        <div class="card-body">

            <flash dismissable="true" />

             <p>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Categorias", new { id = 0 }, Context.Request.Scheme)' ,'Nueva Categoría')" class="btn btn-outline-dark"><i class="fa-solid fa-circle-plus"></i> Agregar categoría</a>
            </p>

                <hr />

                 <div id="view-all">

                      @await Html.PartialAsync("_ViewAll", Model)

                  </div>
        </div>
     </div>

</div>
 

<!--modal-->
<div class="modal fade in" tabindex="-1" role="dialog" data-bs-backdrop="static" id="form-modal">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body"></div>

        </div>
    </div>
</div>


<partial name="_DeleteDialog" />


 @section Scripts {
    @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
      }

    <script src="~/js/showmodal.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#CategoriesTable').DataTable({
            "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "aLengthMenu": [
            [25, 50, 100, 200, -1],
            [25, 50, 100, 200, "Todos"]
            ]
            });
        });
    </script>

    <script>
         sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Categorias/Delete/', false);
    </script>
}
 




