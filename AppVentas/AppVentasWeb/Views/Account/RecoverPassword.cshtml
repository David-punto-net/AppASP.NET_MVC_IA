@model AppVentasWeb.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}
<link rel="stylesheet" href="~/css/StyleLogin.css" />

<flash dismissable="true" />

<div class="login-wrapper">
    <div class="login-container">

        <div class="col-md-12">
            <h3><i class="fa-solid fa-key"></i> Recuperación de Constraseña</h3>

            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Recuperación de Contraseña" class="btn btn-outline-primary" />
                    <a asp-action="Login" class="btn btn-outline-success">Regresar</a>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}