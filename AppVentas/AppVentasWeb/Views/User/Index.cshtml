@model IEnumerable<AppVentasWeb.Data.Entidades.User>
@{
    ViewData["Title"] = "Index";
}




<div class="container-fluid">
    <div class="card mt-2">
    <div class="card-header">
         <i class="fa-solid fa-user"></i> <strong>Usuarios</strong>
    </div>
    <div class="card-body">
            <flash dismissable="true" />
        <p> 
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-dark"><i class="fa-solid fa-circle-plus"></i> Agregar Administrador</a>
        </p>
        <hr />

            <div id="view-all"> 
                @await Html.PartialAsync("_ViewAll", Model)
            </div>

    </div>
</div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script type="text/javascript">

        $(document).ready(function () {
            $('#UsersTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
} 