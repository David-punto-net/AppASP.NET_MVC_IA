@model IEnumerable<AppVentasWeb.Models.ProductsHomeViewModel>
@{
    ViewData["Title"] = "Index";
}
 <link rel="stylesheet" href="~/css/grid.css" />



<div class="container py-2">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-5">

    @foreach (var item in Model)
    {

                @if (item.Product1 != null)
                {
                    <div class="col">

                        <div class="card h-100">

                            <img class="card-img-top fixed-size-img" src="@item.Product1.ImageFullPath" alt="...">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title">@item.Product1.Name</h5>
                                    <p class="card-text">@item.Product1.Description</p>
                                </div>
                                <h3 class="card-price">@Html.DisplayFor(modelItem => item.Product1.Price)</h3>
                            </div>
                            <div class="d-flex justify-content-around mb-3">
                                <a asp-action="Add" asp-route-id="@item.Product1.Id" class="btn btn-dark btn-adjust"><i class="fa-solid fa-cart-shopping"></i> Agregar al carro</a>
                            </div>

                        </div>
                    </div>
                }

