@model WebPayCommitViewModel

<h2>Confirmación de Pago</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Detalles de la Transacción</h3>
        <dl>
            <dt>Estado:</dt>
            <dd>@Model.Status</dd>

            <dt>Monto:</dt>
            <dd>@Model.Amount</dd>

            <dt>Código de Autorización:</dt>
            <dd>@Model.AuthorizationCode</dd>

        </dl>
    </div>


</div>